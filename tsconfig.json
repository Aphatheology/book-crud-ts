{
  "compilerOptions": {
   "target": "es2016",
   "module": "commonjs",
   "esModuleInterop": true,
   "forceConsistentCasingInFileNames": true,
   "strict": true,
   "skipLibCheck": true,
   "outDir": "./dist",
   "baseUrl": "./src"
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "node_modules"
  ]
}

